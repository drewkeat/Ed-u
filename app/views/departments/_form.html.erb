<%= form_with model: @department do |f| %>
    <div class="form-group">
        <%= f.label :name, "Department Name" %>
        <%= f.text_field :name, class: "form-control"%>
    </div>
    <div class="form-group">
        <%= f.label :staff_ids, "Select Department Staff" %> <br>
        <%= f.collection_check_boxes :staff_ids, User.all, :id, :name do |box|%>
            <div class="form-check">
                <%= box.check_box class: "form-check-input" %>
                <%= box.label class: "form-check-label" %>
            </div>
        <% end %>
    </div>
    <%= f.submit submit_text, class: "btn btn-primary mt-3" %>
<% end %>