<div class="row align-items-center">
    <div class="col">
        <h1><%= @user.name %></h1>
    </div>
    <div class="col d-flex justify-content-md-end">
        <%= render_header_buttons(@user) %>
    </div>
</div>
<hr>
<div class="container">
    <div class="row">
        <% if !@user.courses.empty?%>
            <div class="card col">
                <div class="card-header">
                    <strong>Upcoming Facilitations:</strong>
                </div>
                <div class="card-body">
                    <ul>
                        <% @user.courses.each do |course| %>
                        <li><%= link_to course.name, course_path(course) %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        <% end %>
        
        <div class="card col">
            <div class="card-header">
                <strong>Upcoming Enrollments:</strong>
            </div>
            <div class="card-body">
                <ul>
                    <% @user.enrollments.each do |course| %>
                    <li><%= link_to course.name, course_path(course) %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</div>